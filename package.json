{
  "name": "@rumblesan/virgil",
  "version": "0.0.3",
  "description": "A library for helping you build recursive descent parsers and regex-based lexers",
  "author": "Guy John <guy@rumblesan.com>",
  "license": "MIT",
  "main": "lib/virgil.min.js",
  "scripts": {
    "lint": "eslint src",
    "build": "webpack-cli --mode production",
    "build:dev": "webpack-cli --progress --colors --watch --mode development",
    "test": "jest",
    "posttest": "npm run lint",
    "test:watch": "jest test --watch",
    "preVersion": "npm run build && npm test",
    "prepublishOnly": "npm run build && npm test"
  },
  "bugs": {
    "url": "https://github.com/rumblesan/virgil/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rumblesan/virgil"
  },
  "keywords": [
    "parsing",
    "lexing",
    "lexical analysis",
    "parser",
    "lexer"
  ],
  "devDependencies": {
    "@babel/core": "7.7.7",
    "@babel/node": "7.7.7",
    "@babel/preset-env": "7.7.7",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-prettier": "3.1.2",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10"
  },
  "jest": {
    "modulePaths": [
      "src"
    ],
    "setupFilesAfterEnv": [
      "./test/init.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  },
  "dependencies": {
    "babel-loader": "^8.0.6"
  }
}
